<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_sel_complexity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/id_complexity_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/id_compl_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="@integer/complex_max_value" />

    <TextView
        android:id="@+id/id_avg_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/id_btn_gen_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_generate_num_thread" />

    <Button
        android:id="@+id/id_btn_gen_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_gen_async" />

    <Button
        android:id="@+id/id_btn_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btn_photo" />

</LinearLayout>
